generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Recipe {
  id           BigInt   @id @default(autoincrement())
  title        String
  slug         String   @unique
  ingredients  String[]
  instructions String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  searchVector String?  @db.TsVector // Full-text search vector for PostgreSQL

  @@index([title], map: "idx_recipe_title")
  @@index([searchVector], type: "gin", map: "idx_recipe_search_vector") // Index for efficient full-text search
}
